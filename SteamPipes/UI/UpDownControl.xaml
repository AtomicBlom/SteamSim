<UserControl x:Name="UpDownControlRoot" x:Class="SteamPipes.UI.UpDownControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignHeight="24" d:DesignWidth="297">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="UpButton" Content="&#xE1FE;" FontFamily="Segoe UI Symbol" HorizontalAlignment="Left" Width="23" Click="UpButton_Click"/>
        <Button x:Name="DownButton" Content="&#xE1FC;" Grid.Column="2" FontFamily="Segoe UI Symbol" Click="DownButton_Click"/>
        <TextBox Grid.Column="1" TextWrapping="Wrap" Text="{Binding Value, ElementName=UpDownControlRoot, NotifyOnValidationError=True}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

    </Grid>
</UserControl>
